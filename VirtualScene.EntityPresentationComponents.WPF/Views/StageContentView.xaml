<UserControl x:Class="VirtualScene.EntityPresentationComponents.WPF.Views.StageContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:src="clr-namespace:VirtualScene.BusinessComponents.Core.Entities;assembly=VirtualScene.BusinessComponents.Core"
             xmlns:entities="clr-namespace:VirtualScene.BusinessComponents.Core.Entities;assembly=VirtualScene.BusinessComponents.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="ContentTypes" DataType="{x:Type entities:ISceneEntity}">
            <Label Content="{Binding Geometry.Name}"></Label>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <Label Content="{Binding Title}" Height="26" Background="#FFF5E7E7"></Label>
        <TreeView ItemsSource="{Binding Source}" ItemTemplate="{StaticResource ContentTypes}" Height="200"></TreeView>
    </StackPanel>
</UserControl>
